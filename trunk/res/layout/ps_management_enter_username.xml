<?xml version="1.0" encoding="utf-8"?>
	
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ps_mgt_enter_username"
    android:orientation="vertical"
    android:layout_height="fill_parent" android:layout_width="fill_parent">
    
<TextView 
	android:layout_height="wrap_content" 
	android:layout_marginTop="5px" 
	android:layout_marginLeft="10px"
	android:layout_marginRight="10px" 
	android:layout_marginBottom="5px" android:text="Domain will be displayed here." android:textStyle="bold" android:textSize="15px" android:layout_width="fill_parent" android:id="@+id/tvDomain">
	</TextView>
	
<TextView android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:layout_marginLeft="10px" 
	android:layout_marginRight="10px"
	android:layout_marginBottom="5px" 
	android:id="@+id/enter_username" 
	android:text="Enter your username here:" 
	android:textStyle="normal" 
	android:layout_marginTop="50px">
	</TextView>
	
		
<EditText android:layout_marginBottom="5px" 
	android:layout_marginTop="5px" 
	android:text="Username will be entered here." 
	android:layout_marginLeft="20px" 
	android:layout_marginRight="20px" 
	android:singleLine="true" 
	android:layout_height="wrap_content"
	 android:layout_width="fill_parent" android:id="@+id/tvUsername">
	 </EditText>

<TextView 
	android:id="@+id/checkUsername" 
	android:layout_marginLeft="20px" 
	android:layout_marginRight="20px" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:layout_marginBottom="5px" android:layout_marginTop="5px">
	</TextView>

<TableRow android:layout_height="wrap_content" 
	android:id="@+id/buttons" 
	android:layout_width="fill_parent" 
	android:layout_marginTop="10px" 
	android:layout_marginLeft="20px" 
	android:layout_marginRight="20px" 
	android:layout_marginBottom="10px"><Button android:layout_height="wrap_content" android:id="@+id/btnBack" android:text="BACK" android:layout_width="wrap_content" android:layout_marginLeft="20px" android:layout_marginRight="50px"></Button>
<Button android:layout_height="wrap_content" android:id="@+id/btnNext" android:text="NEXT" android:layout_width="wrap_content" android:layout_marginRight="20px" android:layout_marginLeft="50px"></Button>

</TableRow>

</LinearLayout>

